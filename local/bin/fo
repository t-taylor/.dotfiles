#!/bin/env bash

function open {
  selected=$(fzf)
  rifle $selected
}

function gto {
  echo $(fd -t d | fzf)
}

function open-config {
  selected=$(fd -t f -t l . ~/.config | fzf)
  rifle $selected
}

function print_help {
  echo '''
  Usage: fo [options]

  Options:
  -o        Open a file selected from fzf
  -c        Echo a selected directory
  -d        Search through ~/.config
  '''

}

[[ $# -eq 0 ]] && print_help && exit 0

while getopts 'ocd' flag; do
  case "${flag}" in
    o) open;;
    c) gto;;
    d) open-config;;
    *) print_help;;
  esac
done
